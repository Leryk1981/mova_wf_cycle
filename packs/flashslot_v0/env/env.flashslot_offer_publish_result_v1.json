{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/packs/flashslot_v0/env.flashslot_offer_publish_result_v1.json",
  "title": "FlashSlot Offer Publish Result v1",
  "description": "Response envelope capturing where a flash slot offer landed.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "ok",
    "published_to",
    "stats",
    "evidence_refs",
    "errors"
  ],
  "properties": {
    "ok": {
      "type": "boolean",
      "description": "Whether the publish pipeline succeeded."
    },
    "published_to": {
      "type": "array",
      "description": "Channels/audiences that accepted the offer.",
      "items": {
        "type": "string"
      }
    },
    "stats": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sent", "failed"],
      "properties": {
        "sent": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of recipients the offer was sent to."
        },
        "failed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of recipients that could not be reached."
        }
      }
    },
    "evidence_refs": {
      "type": "array",
      "description": "Paths/URLs to audit logs, csv exports, etc.",
      "items": {
        "type": "string"
      }
    },
    "errors": {
      "type": "array",
      "description": "Error messages (if any).",
      "items": {
        "type": "string"
      }
    },
    "meta": {
      "type": "object",
      "description": "Metadata about the execution (duration, executor, run id).",
      "additionalProperties": true
    },
    "ext": {
      "type": "object",
      "description": "Extension field for downstream/integration-specific payloads.",
      "additionalProperties": true
    }
  }
}
