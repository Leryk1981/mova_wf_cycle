{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/packs/invoice_ap_v0/env.invoice_match_po_run_v0.schema.json",
  "title": "Invoice Match PO Run metadata v0",
  "description": "Metadata + references for an invoice vs PO matching attempt (IDE/CLI).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "label",
    "artifacts_dir",
    "request_ref",
    "result_ref",
    "totals_ref",
    "runtime"
  ],
  "properties": {
    "run_id": {
      "type": "string"
    },
    "label": {
      "type": "string"
    },
    "artifacts_dir": {
      "type": "string"
    },
    "request_ref": {
      "type": "string"
    },
    "result_ref": {
      "type": "string"
    },
    "totals_ref": {
      "type": "string"
    },
    "evidence_refs": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    },
    "runtime": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "command",
        "args",
        "exit_code",
        "started_at",
        "finished_at"
      ],
      "properties": {
        "command": { "type": "string" },
        "args": {
          "type": "array",
          "items": { "type": "string" }
        },
        "exit_code": { "type": "integer" },
        "started_at": { "type": "string", "format": "date-time" },
        "finished_at": { "type": "string", "format": "date-time" }
      }
    }
  }
}
