{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ds.domain_pack_scaffold_generate_request_v0",
  "title": "Domain pack scaffold generator request v0",
  "type": "object",
  "required": [
    "mova_version",
    "engine",
    "roles",
    "destinations"
  ],
  "additionalProperties": false,
  "properties": {
    "mova_version": {
      "const": "4.1.1"
    },
    "engine": {
      "type": "string",
      "enum": [
        "claude_code"
      ]
    },
    "roles": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "destinations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
    ,
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action_id", "driver_kind", "driver_config", "role_allowlist"],
        "additionalProperties": false,
        "properties": {
          "action_id": {
            "type": "string",
            "minLength": 1
          },
          "driver_kind": {
            "type": "string",
            "enum": ["restricted_shell", "http", "mcp_proxy"]
          },
          "role_allowlist": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": ["planner", "executor", "qa", "notary"]
            }
          },
          "destinations": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[^*]+$"
            },
            "uniqueItems": true
          },
          "limits": {
            "type": "object",
            "additionalProperties": {
              "anyOf": [
                { "type": "number" },
                { "type": "boolean" },
                {
                  "type": "string",
                  "not": {
                    "pattern": "\\*"
                  }
                }
              ]
            }
          },
          "driver_config": {
            "type": "object"
          }
        },
        "allOf": [
          {
            "if": { "properties": { "driver_kind": { "const": "restricted_shell" } } },
            "then": {
              "properties": {
                "driver_config": {
                  "type": "object",
                  "required": ["command"],
                  "additionalProperties": false,
                  "properties": {
                    "command": { "type": "string" }
                  }
                }
              }
            }
          },
          {
            "if": { "properties": { "driver_kind": { "const": "http" } } },
            "then": {
              "properties": {
                "driver_config": {
                  "type": "object",
                  "required": ["base_url", "path", "method"],
                  "additionalProperties": false,
                  "properties": {
                    "base_url": { "type": "string", "format": "uri" },
                    "path": { "type": "string" },
                    "method": {
                      "type": "string",
                      "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS", "HEAD"]
                    }
                  }
                }
              }
            }
          },
          {
            "if": { "properties": { "driver_kind": { "const": "mcp_proxy" } } },
            "then": {
              "properties": {
                "driver_config": {
                  "type": "object",
                  "required": ["server_id", "tool_name"],
                  "additionalProperties": false,
                  "properties": {
                    "server_id": { "type": "string" },
                    "tool_name": { "type": "string" }
                  }
                }
              }
            }
          }
        ]
      },
      "uniqueItems": true
    },
    "policy_overrides": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    },
    "pipeline_enabled": {
      "type": "boolean",
      "default": true
    }
  }
}
