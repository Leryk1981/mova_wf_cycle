{"$schema": "https://json-schema.org/draft/2020-12/schema","type": "object","title": "Invoice MVP Period Export Request v0","description": "Request schema for exporting invoices for a period","required": ["provider","idempotency_key","period_start","period_end"],"properties": {"provider": {"type": "string","enum": ["sevdesk", "manual"]},"idempotency_key": {"type": "string","pattern": "[a-zA-Z0-9._-]+$","maxLength": 128},"dry_run": {"type": "boolean","default": true},"period_start": {"type": "string","format": "date","description": "Start date of the period to export"},"period_end": {"type": "string","format": "date","description": "End date of the period to export"},"export_format": {"type": "string","enum": ["csv", "pdf", "json", "xml"],"default": "json"}}}
