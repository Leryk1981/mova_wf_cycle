{"$schema": "https://json-schema.org/draft/2020-12/schema","type": "object","title": "Invoice MVP Mark Paid Request v0","description": "Request schema for marking an invoice as paid","required": ["provider","idempotency_key","invoice_id"],"properties": {"provider": {"type": "string","enum": ["sevdesk", "manual"]},"idempotency_key": {"type": "string","pattern": "[a-zA-Z0-9._-]+$","maxLength": 128},"dry_run": {"type": "boolean","default": true},"invoice_id": {"type": "string","description": "Invoice identifier in the provider system"},"payment_date": {"type": "string","format": "date","description": "Date when payment was received"},"payment_method": {"type": "string","enum": ["bank_transfer", "credit_card", "paypal", "check", "other"]}}}
