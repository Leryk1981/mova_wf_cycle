{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/packs/invoice_ap_v0/ds.invoice_payment_export_request_v0.schema.json",
  "title": "Invoice Payment Export Request v0",
  "description": "Request describing approved invoices ready for export to treasury.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "export_batch_id",
    "invoices"
  ],
  "properties": {
    "export_batch_id": {
      "type": "string"
    },
    "export_date": {
      "type": "string",
      "description": "YYYY-MM-DD string for the export run."
    },
    "invoices": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "invoice_id",
          "vendor_id",
          "vendor_name",
          "currency",
          "amount",
          "execution_date",
          "bank"
        ],
        "properties": {
          "invoice_id": { "type": "string" },
          "vendor_id": { "type": "string" },
          "vendor_name": { "type": "string" },
          "currency": { "type": "string" },
          "amount": { "type": "number" },
          "execution_date": { "type": "string" },
          "remittance_text": { "type": "string" },
          "bank": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "iban"
            ],
            "properties": {
              "iban": { "type": "string" },
              "bic": { "type": "string" }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
