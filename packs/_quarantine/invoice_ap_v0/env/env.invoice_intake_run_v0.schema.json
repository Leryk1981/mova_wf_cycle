{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/packs/invoice_ap_v0/env.invoice_intake_run_v0.schema.json",
  "title": "Invoice Intake Run metadata v0",
  "description": "Metadata + references for an invoice intake runtime attempt (IDE/CLI).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "label",
    "artifacts_dir",
    "request_ref",
    "result_ref",
    "totals_ref",
    "runtime"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this intake attempt (timestamp or hash)."
    },
    "label": {
      "type": "string",
      "description": "Track (ide/cli/etc.) that produced the attempt."
    },
    "evidence_refs": {
      "type": "array",
      "description": "Supporting evidence references (totals, logs, attachments).",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "meta": {
      "type": "object",
      "description": "Extra metadata (git hash, operator, etc.).",
      "additionalProperties": true,
      "default": {}
    },
    "artifacts_dir": {
      "type": "string",
      "description": "Directory that contains request/result/evidence artifacts."
    },
    "request_ref": {
      "type": "string",
      "description": "Relative path to request.json."
    },
    "result_ref": {
      "type": "string",
      "description": "Relative path to result.json."
    },
    "totals_ref": {
      "type": "string",
      "description": "Relative path to the deterministic totals evidence."
    },
    "runtime": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "command",
        "args",
        "exit_code",
        "started_at",
        "finished_at"
      ],
      "properties": {
        "command": {
          "type": "string"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "exit_code": {
          "type": "integer"
        },
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "finished_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
