{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/packs/mcda_matrix_v0/env.mcda_score_request_v1.json",
  "title": "MCDA Score Request v1",
  "description": "Envelope for requesting MCDA scoring with a fixed method config.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "request_id",
    "problem",
    "method_config"
  ],
  "properties": {
    "request_id": {
      "type": "string",
      "description": "Client-generated idempotency key for the scoring request."
    },
    "problem": {
      "$ref": "https://mova.dev/packs/mcda_matrix_v0/ds.mcda_problem_v1.json"
    },
    "method_config": {
      "$ref": "https://mova.dev/packs/mcda_matrix_v0/ds.mcda_method_config_v1.json"
    },
    "meta": {
      "type": "object",
      "description": "Control-plane metadata (tenant, operator, trace ids).",
      "additionalProperties": true,
      "default": {}
    },
    "ext": {
      "type": "object",
      "description": "Extension space reserved for runtime hints.",
      "additionalProperties": true,
      "default": {}
    }
  }
}
