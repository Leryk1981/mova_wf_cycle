{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ds.agent_template_generate_request_v0",
  "title": "Agent template generator request v0",
  "type": "object",
  "required": [
    "mova_version",
    "engine",
    "roles",
    "destinations"
  ],
  "additionalProperties": false,
  "properties": {
    "mova_version": {
      "const": "4.1.1"
    },
    "engine": {
      "type": "string",
      "enum": [
        "claude_code"
      ]
    },
    "roles": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "destinations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
