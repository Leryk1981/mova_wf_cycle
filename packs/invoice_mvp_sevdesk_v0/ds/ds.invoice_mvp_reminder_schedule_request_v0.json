{"$schema": "https://json-schema.org/draft/2020-12/schema","type": "object","title": "Invoice MVP Reminder Schedule Request v0","description": "Request schema for scheduling a reminder for an invoice","required": ["provider","idempotency_key","invoice_id"],"properties": {"provider": {"type": "string","enum": ["sevdesk", "manual"]},"idempotency_key": {"type": "string","pattern": "[a-zA-Z0-9._-]+$","maxLength": 128},"dry_run": {"type": "boolean","default": true},"invoice_id": {"type": "string","description": "Invoice identifier in the provider system"},"reminder_date": {"type": "string","format": "date","description": "Date to send the reminder"},"reminder_type": {"type": "string","enum": ["due_soon", "overdue", "custom"]}}}
