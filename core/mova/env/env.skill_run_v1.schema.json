{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/core/mova/env/env.skill_run_v1.schema.json",
  "title": "Skill Run Envelope v1",
  "description": "Envelope describing a request to run a skill via the control plane.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "envelope_id",
    "verb",
    "resource",
    "input"
  ],
  "properties": {
    "envelope_id": {
      "type": "string",
      "description": "Unique id of this control-plane envelope."
    },
    "verb": {
      "type": "string",
      "enum": ["run"],
      "description": "Control-plane verb: run a skill."
    },
    "resource": {
      "type": "string",
      "enum": ["skill"],
      "description": "Control-plane resource: skill."
    },
    "input": {
      "$ref": "https://mova.dev/schemas/core/mova/ds/ds.skill_run_request_v1.schema.json"
    },
    "output": {
      "type": "object",
      "description": "Optional result of the run or plan. Not strictly defined at this stage.",
      "additionalProperties": true
    },
    "meta": {
      "type": "object",
      "description": "Optional metadata for the control-plane envelope.",
      "additionalProperties": true
    }
  }
}

