{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/core/mova/env/env.file_cleanup_snapshot_request_v1.schema.json",
  "title": "Envelope: File Cleanup Snapshot Request v1",
  "description": "Speech act: request a filesystem snapshot for cleanup (no mutations).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "mova_version",
    "envelope_type",
    "envelope_id",
    "target"
  ],
  "properties": {
    "mova_version": {
      "type": "string",
      "const": "4.0.0",
      "description": "MOVA core version targeted by this envelope."
    },
    "envelope_type": {
      "type": "string",
      "const": "env.file_cleanup_snapshot_request_v1",
      "description": "Logical identifier of this envelope."
    },
    "envelope_id": {
      "type": "string",
      "description": "Unique id of this envelope instance."
    },
    "requested_by": {
      "type": "string",
      "description": "Initiator id (optional)."
    },
    "requested_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the request was created."
    },
    "target": {
      "$ref": "https://mova.dev/schemas/core/mova/ds/ds.file_cleanup_target_v1.schema.json",
      "description": "Target to snapshot."
    }
  }
}
