{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/core/mova/env/env.file_cleanup_plan_request_v1.schema.json",
  "title": "Envelope: File Cleanup Plan Request v1",
  "description": "Speech act: request a cleanup plan based on an existing snapshot.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "mova_version",
    "envelope_type",
    "envelope_id",
    "snapshot"
  ],
  "properties": {
    "mova_version": {
      "type": "string",
      "const": "4.0.0",
      "description": "MOVA core version targeted by this envelope."
    },
    "envelope_type": {
      "type": "string",
      "const": "env.file_cleanup_plan_request_v1",
      "description": "Logical identifier of this envelope."
    },
    "envelope_id": {
      "type": "string",
      "description": "Unique id of this envelope instance."
    },
    "requested_by": {
      "type": "string",
      "description": "Initiator id (optional)."
    },
    "requested_at": {
      "type": "string",
      "description": "When the request was created.",
      "format": "date-time"
    },
    "snapshot": {
      "$ref": "https://mova.dev/schemas/core/mova/ds/ds.file_cleanup_snapshot_v1.schema.json",
      "description": "Snapshot to plan against."
    },
    "preferences": {
      "type": "object",
      "description": "Optional planning preferences.",
      "additionalProperties": false,
      "properties": {
        "max_age_days_for_temp": {
          "type": "integer",
          "description": "Max age for temp files (days)."
        },
        "min_size_bytes_for_archive": {
          "type": "number",
          "description": "Min size for archiving."
        },
        "aggressiveness": {
          "type": "string",
          "enum": [
            "conservative",
            "balanced",
            "aggressive"
          ],
          "description": "Planning aggressiveness."
        },
        "never_delete_extensions": {
          "type": "array",
          "description": "Extensions to never delete.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
