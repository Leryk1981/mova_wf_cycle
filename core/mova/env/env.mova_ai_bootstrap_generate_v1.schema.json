{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/core/mova/env/env.mova_ai_bootstrap_generate_v1.schema.json",
  "title": "Envelope: MOVA AI Bootstrap Generate v1",
  "description": "Speech act: generate MOVA AI bootstrap pack for a target model/environment.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "mova_version",
    "envelope_type",
    "envelope_id",
    "target"
  ],
  "properties": {
    "mova_version": {
      "type": "string",
      "const": "4.0.0",
      "description": "MOVA core version targeted by this envelope."
    },
    "envelope_type": {
      "type": "string",
      "const": "env.mova_ai_bootstrap_generate_v1",
      "description": "Logical identifier of this envelope."
    },
    "envelope_id": {
      "type": "string",
      "description": "Unique id of this envelope instance."
    },
    "requested_by": {
      "type": "string",
      "description": "Initiator id (human, agent, or system)."
    },
    "requested_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the request was created."
    },
    "target": {
      "$ref": "https://mova.dev/schemas/core/mova/ds/ds.mova_ai_bootstrap_target_v1.schema.json",
      "description": "Target model/environment descriptor."
    },
    "options": {
      "type": "object",
      "description": "Optional generation options.",
      "additionalProperties": false,
      "properties": {
        "language": {
          "type": "string",
          "enum": [
            "en",
            "uk",
            "de"
          ],
          "description": "Requested language (current implementation uses English)."
        },
        "include_examples": {
          "type": "boolean",
          "description": "Whether to include examples in the pack."
        }
      }
    }
  }
}
