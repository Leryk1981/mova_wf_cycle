{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.mova4_core_catalog_publish_v1.schema.json",
  "title": "env.mova4_core_catalog_publish_v1",
  "description": "Envelope for publishing a MOVA 4.0.0 core catalog to an executor or registry.",
  "type": "object",
  "properties": {
    "envelope_id": {
      "type": "string",
      "const": "env.mova4_core_catalog_publish_v1"
    },
    "verb": {
      "type": "string",
      "const": "publish"
    },
    "roles": {
      "type": "object",
      "properties": {
        "publisher": {
          "type": "string"
        },
        "registry": {
          "type": "string"
        }
      },
      "required": [
        "publisher",
        "registry"
      ],
      "additionalProperties": false
    },
    "catalog": {
      "$ref": "ds.mova4_core_catalog_v1.schema.json"
    },
    "meta": {
      "type": "object",
      "description": "Optional metadata: correlation ids, timestamps, etc.",
      "additionalProperties": true
    }
  },
  "required": [
    "envelope_id",
    "verb",
    "roles",
    "catalog"
  ],
  "additionalProperties": false
}

