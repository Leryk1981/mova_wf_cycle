{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/skills/context7_docs/env.context7_docs_fetch_v1.schema.json",
  "title": "Context7 Docs Fetch Envelope v1",
  "description": "Envelope describing a request to fetch documentation via Context7 and the expected structured bundle.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "envelope_id",
    "skill_id",
    "verb",
    "resource",
    "input"
  ],
  "properties": {
    "envelope_id": {
      "type": "string",
      "description": "Unique id of this envelope."
    },
    "skill_id": {
      "type": "string",
      "const": "skill.context7_docs",
      "description": "Id of the skill handling this request."
    },
    "verb": {
      "type": "string",
      "enum": ["transform"],
      "description": "Verb describing the action."
    },
    "resource": {
      "type": "string",
      "enum": ["catalog"],
      "description": "Resource type this envelope operates on."
    },
    "input": {
      "$ref": "https://mova.dev/schemas/skills/context7_docs/ds.context7_docs_request_v1.schema.json"
    },
    "output": {
      "$ref": "https://mova.dev/schemas/skills/context7_docs/ds.context7_docs_bundle_v1.schema.json"
    },
    "meta": {
      "type": "object",
      "description": "Optional metadata (environment, agent name, etc.).",
      "additionalProperties": true
    }
  }
}

