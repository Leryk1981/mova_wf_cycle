{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/lab/envelopes/env.lab_workflow_experiment_plan_request_v1.schema.json",
  "title": "Envelope: Lab Workflow Experiment Plan Request v1",
  "description": "Request to craft a lab_workflow_experiment_config from a baseline procedure and goals.",
  "$comment": "LAB-EXPERIMENTAL. Workflow lab envelope.",
  "allOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["mova_version", "envelope_type", "envelope_id", "payload"],
      "properties": {
        "mova_version": {
          "type": "string",
          "const": "4.0.0",
          "description": "MOVA core version targeted by this envelope."
        },
        "envelope_type": {
          "type": "string",
          "const": "env.lab_workflow_experiment_plan_request_v1",
          "description": "Logical identifier of this envelope."
        },
        "envelope_id": {
          "type": "string",
          "description": "Unique id of this envelope instance."
        },
        "requested_by": {
          "type": "string",
          "description": "Initiator of the request (optional)."
        },
        "requested_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the request was created."
        },
        "meta": {
          "type": "object",
          "description": "Optional metadata for routing/context.",
          "additionalProperties": true
        },
        "payload": {
          "type": "object",
          "description": "Envelope payload."
        }
      }
    },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["experiment_config"],
          "properties": {
            "experiment_config": {
              "$ref": "https://mova.dev/lab/schemas/ds.lab_workflow_experiment_config_v1.schema.json",
              "description": "Experiment configuration to plan or request."
            }
          }
        }
      }
    }
  ]
}
