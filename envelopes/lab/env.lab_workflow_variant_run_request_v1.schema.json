{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/lab/envelopes/env.lab_workflow_variant_run_request_v1.schema.json",
  "title": "Envelope: Lab Workflow Variant Run Request v1",
  "description": "Request to run a specific lab_workflow_procedure variant on test cases.",
  "$comment": "LAB-EXPERIMENTAL. Workflow lab envelope.",
  "allOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["mova_version", "envelope_type", "envelope_id", "payload"],
      "properties": {
        "mova_version": {
          "type": "string",
          "const": "4.0.0",
          "description": "MOVA core version targeted by this envelope."
        },
        "envelope_type": {
          "type": "string",
          "const": "env.lab_workflow_variant_run_request_v1",
          "description": "Logical identifier of this envelope."
        },
        "envelope_id": {
          "type": "string",
          "description": "Unique id of this envelope instance."
        },
        "requested_by": {
          "type": "string",
          "description": "Initiator of the request (optional)."
        },
        "requested_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the request was created."
        },
        "meta": {
          "type": "object",
          "description": "Optional metadata for routing/context.",
          "additionalProperties": true
        },
        "payload": {
          "type": "object",
          "description": "Envelope payload."
        }
      }
    },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["experiment_id", "procedure", "agent_profile"],
          "properties": {
            "experiment_id": {
              "type": "string",
              "description": "Experiment identifier whose variant is being run."
            },
            "procedure": {
              "$ref": "https://mova.dev/lab/schemas/ds.lab_workflow_procedure_v1.schema.json",
              "description": "Procedure variant to execute."
            },
            "agent_profile": {
              "type": "object",
              "additionalProperties": false,
              "required": ["agent_id", "model_family", "profile_id"],
              "properties": {
                "agent_id": {
                  "type": "string",
                  "description": "Agent identifier."
                },
                "model_family": {
                  "type": "string",
                  "description": "Model family (e.g., gpt, gemini, qwen)."
                },
                "profile_id": {
                  "type": "string",
                  "description": "Profile id for the agent."
                }
              }
            },
            "test_data_ref": {
              "type": "string",
              "description": "Optional reference to test data used for this run."
            }
          }
        }
      }
    }
  ]
}
