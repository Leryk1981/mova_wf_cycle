{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/lab/envelopes/env.smartlink_default_route_request_v1.schema.json",
  "title": "Envelope: SmartLink Default Route Request v1",
  "description": "Request to evaluate SmartLink routing rules and return a target for a click context.",
  "$comment": "LAB-EXPERIMENTAL. SmartLink routing envelope.",
  "allOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["mova_version", "envelope_type", "envelope_id", "payload"],
      "properties": {
        "mova_version": {
          "type": "string",
          "const": "4.0.0",
          "description": "MOVA core version targeted by this envelope."
        },
        "envelope_type": {
          "type": "string",
          "const": "env.smartlink_default_route_request_v1",
          "description": "Logical identifier of this envelope."
        },
        "envelope_id": {
          "type": "string",
          "description": "Unique id of this envelope instance."
        },
        "requested_by": {
          "type": "string",
          "description": "Initiator of the request (optional)."
        },
        "requested_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the request was created."
        },
        "meta": {
          "type": "object",
          "description": "Optional metadata for routing/context.",
          "additionalProperties": true
        },
        "payload": {
          "type": "object",
          "description": "Envelope payload."
        }
      }
    },
    {
      "type": "object",
      "properties": {
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["smartlink_id", "context"],
          "properties": {
            "smartlink_id": {
              "type": "string",
              "description": "SmartLink identifier/slug used to resolve routing rules."
            },
            "rules_ref": {
              "type": "string",
              "description": "Optional reference/URI to an explicit SmartLink rules document."
            },
            "context": {
              "type": "object",
              "additionalProperties": false,
              "description": "Normalized or raw context for routing.",
              "properties": {
                "country": { "type": "string" },
                "lang": { "type": "string" },
                "device": { "type": "string" },
                "utm": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "source": { "type": "string" },
                    "campaign": { "type": "string" },
                    "medium": { "type": "string" },
                    "term": { "type": "string" },
                    "content": { "type": "string" }
                  }
                },
                "referrer": { "type": "string" },
                "client_ip": { "type": "string" },
                "debug": { "type": "boolean" }
              },
              "required": []
            }
          }
        }
      }
    }
  ]
}
