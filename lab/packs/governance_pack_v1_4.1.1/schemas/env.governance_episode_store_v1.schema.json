{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.governance_episode_store_v1.schema.json",
  "title": "env.governance_episode_store_v1",
  "description": "Governance Pack v1: Store one or more governance/security episodes (security_event_episode_core_v1) with optional provenance evidence.",
  "type": "object",
  "properties": {
    "envelope_id": {
      "type": "string",
      "const": "env.governance_episode_store_v1"
    },
    "verb": {
      "type": "string",
      "const": "record"
    },
    "roles": {
      "type": "object",
      "description": "Who records the episode(s) and which store receives them.",
      "properties": {
        "producer": {
          "type": "string"
        },
        "episode_store": {
          "type": "string"
        }
      },
      "required": [
        "producer",
        "episode_store"
      ],
      "additionalProperties": false
    },
    "episodes": {
      "type": "array",
      "items": {
        "$ref": "https://mova.dev/schemas/ds.security_event_episode_core_v1.schema.json"
      }
    },
    "meta": {
      "type": "object",
      "description": "Optional metadata for routing/correlation.",
      "additionalProperties": true
    }
  },
  "required": [
    "envelope_id",
    "verb",
    "roles",
    "episodes"
  ],
  "additionalProperties": false
}
