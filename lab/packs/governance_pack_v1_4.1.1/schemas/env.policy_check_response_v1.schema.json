{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.policy_check_response_v1.schema.json",
  "title": "env.policy_check_response_v1",
  "description": "Governance Pack v1: Result of policy evaluation for a set of candidate actions.",
  "type": "object",
  "properties": {
    "envelope_id": {
      "type": "string",
      "const": "env.policy_check_response_v1"
    },
    "verb": {
      "type": "string",
      "const": "get"
    },
    "roles": {
      "type": "object",
      "description": "Who responds and who receives the decision.",
      "properties": {
        "policy_engine": {
          "type": "string",
          "description": "Identifier of the policy engine / governance adapter."
        },
        "producer": {
          "type": "string",
          "description": "Identifier of the requester (agent/IDE/runner)."
        }
      },
      "required": [
        "policy_engine",
        "producer"
      ],
      "additionalProperties": false
    },
    "decision": {
      "type": "string",
      "enum": [
        "allow",
        "deny",
        "modify"
      ],
      "description": "Overall decision for the batch."
    },
    "policy_profile_id": {
      "type": "string"
    },
    "security_model_version": {
      "type": "string"
    },
    "evaluated_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tool_call_id": {
            "type": "string",
            "description": "tool_call_id from the request."
          },
          "decision": {
            "type": "string",
            "enum": [
              "allow",
              "deny",
              "require_confirmation"
            ]
          },
          "reason": {
            "type": "string"
          },
          "recommended_actions": {
            "type": "array",
            "description": "Optional recommended actions (may align with global.security_catalog_v1.security_action_type[*].id).",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "tool_call_id",
          "decision"
        ],
        "additionalProperties": false
      }
    },
    "security_event_episode_ref": {
      "type": "string",
      "description": "Optional reference to a stored security event episode."
    },
    "meta": {
      "type": "object",
      "description": "Optional metadata for routing/correlation.",
      "additionalProperties": true
    }
  },
  "required": [
    "envelope_id",
    "verb",
    "roles",
    "decision",
    "policy_profile_id",
    "evaluated_actions"
  ],
  "additionalProperties": false
}
