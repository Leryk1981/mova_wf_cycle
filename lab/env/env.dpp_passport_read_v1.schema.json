{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/lab/env/env.dpp_passport_read_v1.schema.json",
  "title": "env.dpp_passport_read_v1",
  "description": "Lab-level envelope to request a DPP battery passport view (public/manufacturer/verifier/technical).",
  "type": "object",
  "properties": {
    "envelope_type": {
      "type": "string",
      "const": "env.dpp_passport_read_v1"
    },
    "verb": {
      "type": "string",
      "const": "read"
    },
    "roles": {
      "type": "object",
      "properties": {
        "initiator": {
          "type": "string",
          "description": "Who requests the view (public_portal, manufacturer_portal, verifier_portal, etc.)."
        }
      },
      "required": [
        "initiator"
      ],
      "additionalProperties": true
    },
    "data": {
      "type": "object",
      "properties": {
        "passport_id": {
          "type": "string",
          "description": "Battery passport identifier."
        },
        "view_level": {
          "type": "string",
          "enum": [
            "public",
            "manufacturer",
            "verifier",
            "technical"
          ]
        }
      },
      "required": [
        "passport_id",
        "view_level"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "envelope_type",
    "verb",
    "data"
  ],
  "additionalProperties": false
}
